{
  "tasks": {
    "watch": "deno run --watch ./src/main.ts"
  },
  "compilerOptions": {
    "allowJs": false,
    "lib": ["deno.window"]
  },
  "lint": {
    "include": ["src/"],
    "exclude": ["tests/"]
  },
  "fmt": {
    "useTabs": true,
    "lineWidth": 80,
    "indentWidth": 4,
    "semiColons": false,
    "singleQuote": true,
    "proseWrap": "preserve",
    "include": ["src/"],
    "exclude": ["src/testdata/", "data/fixtures/**/*.ts"]
  }
}
